{
  "name": "doctor-gcs-sink-",
  "config": {
    "connector.class": "io.aiven.kafka.connect.gcs.GcsSinkConnector",
    "tasks.max": "2",
    "topics": "postgres-source.public.doctors",
    "format.output.type": "json",
    "gcs.bucket.name": "hospital_datalake",
    "gcs.part.size": "5242880",
    "flush.size": "1",
    "storage.class": "io.confluent.connect.gcs.storage.GcsStorage",
    "format.class": "io.confluent.connect.gcs.format.json.JsonFormat",
    "schema.compatibility": "NONE",

    "value.converter": "org.apache.kafka.connect.json.JsonConverter",
    "value.converter.schemas.enable": "true",

    "transforms": "unwrap",
    "transforms.unwrap.type": "io.debezium.transforms.ExtractNewRecordState",
    "transforms.unwrap.drop.tombstones": "false",
    
    "file.flush.interval.ms": "5000",
    "file.max.records": "10",
    "gcs.partitioner.class": "io.confluent.connect.storage.partitioner.DefaultPartitioner",

    "gcs.credentials.path": "/etc/kafka-connect/secrets/gcs.json"
  }
}
